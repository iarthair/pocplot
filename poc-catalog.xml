<glade-catalog name="poc" library="libpoc.so" depends="gtk+">

  <glade-widget-classes>
    <glade-widget-class name="PocPlot"
    			generic-name="plot"
			title="PocPlot canvas"/>

    <glade-widget-class name="PocDataset"
    			generic-name="dataset"
			title="PocPlot data set"/>

    <glade-widget-class name="PocDatasetSpline"
    			generic-name="dataset"
			title="PocPlot data set with cubic spline interpolation"/>

    <glade-widget-class name="PocAxis"
    			generic-name="axis"
			title="PocPlot axis"/>

    <glade-widget-class name="PocLegend"
    			generic-name="legend"
			title="Show line sample and legend text for PocPlot"/>

    <glade-widget-class name="PocSample"
    			generic-name="sample"
			title="PocPlot data set sample line"/>
  </glade-widget-classes>

  <glade-widget-group name="poc-widgets" title="PocPlot Widgets">
    <glade-widget-class-ref name="PocPlot"/>
    <glade-widget-class-ref name="PocDataset"/>
    <glade-widget-class-ref name="PocDatasetSpline"/>
    <glade-widget-class-ref name="PocAxis"/>
    <glade-widget-class-ref name="PocLegend"/>
    <glade-widget-class-ref name="PocSample"/>
  </glade-widget-group>
</glade-catalog>
